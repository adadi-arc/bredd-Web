  @media only screen and (max-width: 768px) { 

    .CalendarNavButtons{
      padding-left: .75rem;
      padding-right: .75rem;
    }  

    .MonthHeading{
    font-size: 2rem;
    }

    .IsMobile{
      display: none;
    }  
  }

  @media only screen and (min-width: 768px) { 

  
    .IsDesktopMobile{
      display: none;
    }  

  }


  @media only screen and (min-width: 1024px) { 
  
    .IsSmall{
      display: none;
    }  

  }

  @media only screen and (max-width: 1025px) { 
  
    .IsBig{
      display: none;
    }  

  }

  

  

  @media only screen and (max-width: 1120px) { 

    .calendar_buttonRow{
      flex: 0 0 100%;
      max-width: 100%;
    }    

    .CalendarActionButton{
      width:100% !important;
      }
  }



